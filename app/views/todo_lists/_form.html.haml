= form_for @todo_list do |f|
  -if @todo_list.errors.any?
    %h2= pluralize(@todo_list.errors.count, 'error')
    %ul
      -@todo_list.errors.full_messages.each do |msg|
        %li= msg

  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :description
    = f.text_area :description
  %p
    = f.submit